{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier" // Indique que est√° usando o prettier
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "prettier/prettier":[
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "trailingComma": "all",
                "arrowParens": "avoid"
            }
        ]
    }
}
